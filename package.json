{
  "name": "node-ts-app",
  "version": "1.0.0",
  "description": "A complete Node.js project template using TypeScript and following general best practices.",
  "keywords": [
    "typescript",
    "template"
  ],
  "author": {
    "name": "Gabriel Maia",
    "url": "https://github.com/gabrielmaialva33"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gabrielmaialva33/node-ts-app.git"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "start": "node dist/server.js",
    "start:build": "rimraf dist && tsc && node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/src/main.js",
    "start:dev": "nodemon",
    "start:test": "nodemon --watch './**/*.ts' --exec 'ts-node' bin/test.ts",
    "test": "ts-node bin/test.ts",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.11",
    "@babel/plugin-proposal-decorators": "^7.22.10",
    "@babel/plugin-transform-typescript": "^7.22.11",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.11",
    "@japa/api-client": "^1.4.4",
    "@japa/assert": "^1.4.1",
    "@japa/run-failed-tests": "^1.1.1",
    "@japa/runner": "^2.5.1",
    "@japa/spec-reporter": "^1.3.3",
    "@types/node": "^20.5.6",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "babel-plugin-tsconfig-paths-module-resolver": "^1.0.4",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "openapi-types": "^12.1.3",
    "prettier": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "yarn-upgrade-all": "^0.7.2"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  }
}
