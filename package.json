{
  "name": "node-ts-app",
  "version": "1.0.0",
  "description": "A complete Node.js project template using TypeScript and following general best practices.",
  "keywords": [
    "typescript",
    "template"
  ],
  "author": {
    "name": "Gabriel Maia",
    "url": "https://github.com/gabrielmaialva33"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gabrielmaialva33/node-ts-app.git"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "private": true,
  "main": "build/index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf build && tsc",
    "start": "node build/src/index.js",
    "start:dev": "tsc --watch & nodemon build/src/index.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  },
  "prettier": "@adonisjs/prettier-config",
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.4",
    "openapi-types": "^12.1.3",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2",
    "source-map-support": "^0.5.21"
  }
}
